<div>
    <h5>Ваша статистика</h5>
    {{#show_current_balls}}
    <strong>Всего баллов: </strong> {{current_balls}}<br>
    {{/show_current_balls}}
    {{#show_mean_value}}
    <strong>Ср. оценка: </strong> {{mean_value}}
    {{/show_mean_value}}
</div>

{{#show_rating_table}}
<div class="mt-4">
    <h5>Таблица лидеров</h5>

    <table class="table table-striped">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Имя</th>
            <th scope="col">Баллы</th>
            </tr>
        </thead>
        <tbody>
            {{#users}}
            <tr>
            <th scope="row">{{rang}}</th>
            <td>{{lastname}} {{firstname}}</td>
            <td>{{balls}}</td>
            {{/users}}
        </tbody>
    </table>
</div>
{{/show_rating_table}}